<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.prefabrications'),
    path: project_prefabrications_path(@project) }
] %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title_for_project', project: @project.name) %></h1>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <%= form_tag project_prefabrications_path(@project), method: :get do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
                            class: 'form-control',
                            placeholder: t('common.labels.search_placeholder') %>
          <div class="input-group-append">
            <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to new_project_prefabrication_path(@project), class: 'btn btn-primary' do %>
        <i class="bi bi-plus"></i> <%= t('common.buttons.new') %>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>
            <%= link_to t('activerecord.attributes.prefabrication.work_location'),
                request.params.merge(sort: 'work_location_id', direction: (params[:sort] == 'work_location_id' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('work_location_id') if params[:sort] == 'work_location_id' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.prefabrication.work_package_number'),
                request.params.merge(sort: 'work_package_number', direction: (params[:sort] == 'work_package_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('work_package_number') if params[:sort] == 'work_package_number' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.prefabrication.on_hold_status'),
                request.params.merge(sort: 'on_hold_status', direction: (params[:sort] == 'on_hold_status' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('on_hold_status') if params[:sort] == 'on_hold_status' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.prefabrication.completed'),
                request.params.merge(sort: 'completed', direction: (params[:sort] == 'completed' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('completed') if params[:sort] == 'completed' %>
          </th>
          <th>
            <%= link_to t('common.labels.created_by'),
                request.params.merge(sort: 'user', direction: (params[:sort] == 'user' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('user') if params[:sort] == 'user' %>
          </th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @prefabrications.each do |prefabrication| %>
          <tr>
            <td><%= t("work_locations.types.#{prefabrication.work_location.location_type}") if prefabrication.work_location %></td>
            <td><%= prefabrication.work_package_number %></td>
            <td><%= status_label(prefabrication.on_hold_status) %></td>
            <td><%= l(prefabrication.completed, format: :short) if prefabrication.completed %></td>
            <td><%= prefabrication.user.name %></td>
            <td class="text-end">
              <% if current_user.can_view?("Prefabrication") %>
                <%= link_to project_prefabrication_path(@project, prefabrication), class: 'btn btn-sm btn-outline-primary' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              <% end %>
              <% if current_user.can_edit?("Prefabrication") %>
                <%= link_to edit_project_prefabrication_path(@project, prefabrication), class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if current_user.can_delete?("Prefabrication") %>
                  <%= button_tag type: 'button',
                             class: 'btn btn-outline-danger m-1',
                             title: t('common.buttons.delete'),
                             data: {
                               bs_toggle: "modal",
                               bs_target: "#deletePrefabricationModal",
                               "project-id": prefabrication.project.id,
                               "prefabrication-id": prefabrication.id,
                               "prefabrication-name": prefabrication.work_package_number,
                               "prefabrication-number": prefabrication.work_package_number
                             } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'delete_confirmation_modal', 
           locals: {
             modal_id: 'deletePrefabricationModal',
             controller_name: 'delete-prefabrication',
             model_name: 'prefabrication'
           } %>