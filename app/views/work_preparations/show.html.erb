<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.work_preparations'),
    path: project_work_preparations_path(@project) },
  { text: @work_preparation.work_package_number }
] %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0"><%= t('.title', work_package: @work_preparation.work_package_number) %></h2>
      <div>
        <%= link_to edit_project_work_preparation_path(@project, @work_preparation), class: 'btn btn-outline-primary' do %>
          <i class="bi bi-pencil"></i> <%= t('common.labels.edit') %>
        <% end %>
      </div>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.work_preparation.work_package_number') %></dt>
            <dd class="col-sm-6"><%= @work_preparation.work_package_number %></dd>


            <dt class="col-sm-6"><%= t('common.labels.created_by') %></dt>
            <dd class="col-sm-6"><%= @work_preparation.user.name %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.work_preparation.completed') %>
            <dd class="col-sm-6"><%= l(@work_preparation.completed, format: :long) if @work_preparation.completed %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.final_inspection.on_hold_status') %></dt>
            <dd class="col-sm-6"><%= @work_preparation.on_hold_status %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.final_inspection.on_hold_date') %></dt>
            <dd class="col-sm-6"><%= l(@work_preparation.on_hold_date, format: :long) if @work_preparation.on_hold_date %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.final_inspection.on_hold_comment') %></dt>
            <dd class="col-sm-6"><%= @work_preparation.on_hold_comment %></dd>

            <%= render partial: 'application/image_gallery', locals: { images: @work_preparation.on_hold_images } %>

          </dl>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <%= link_to t('common.labels.back'), project_work_preparations_path(@project), class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  </div>
</div>
