<%= form_with(model: @incoming_delivery, local: true, class: 'needs-validation') do |f| %>
  <% if @incoming_delivery.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= t('.errors.header', count: @incoming_delivery.errors.count) %></h6>
      <ul>
        <% @incoming_delivery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :project_id if @project %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <% unless @project %>
          <%= f.label :project_id, t('.labels.project'), class: 'form-label' %>
          <%= f.collection_select :project_id,
              Project.all, :id, :name,
              { prompt: t('.select_project') },
              { class: 'form-select' } %>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :delivery_date, t('.labels.delivery_date'), class: 'form-label' %>
        <%= f.date_field :delivery_date, class: 'form-control', value: Date.current.strftime('%Y-%m-%d') %>
      </div>

      <div class="mb-3">
        <%= f.label :order_number, t('.labels.order_number'), class: 'form-label' %>
        <%= f.text_field :order_number, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="mb-3">
        <%= f.label :supplier_name, t('.labels.supplier_name'), class: 'form-label' %>
        <%= f.text_field :supplier_name, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :notes, t('.labels.notes'), class: 'form-label' %>
        <%= f.text_area :notes, class: 'form-control', rows: 3 %>
      </div>

      <div class="mb-3">
        <%= f.label :delivery_notes, t('.labels.delivery_notes'), class: 'form-label' %>
        <%= f.file_field :delivery_notes,
                         class: 'form-control',
                         direct_upload: true,
                         multiple: true %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit t('incoming_deliveries.buttons.submit'), class: 'btn btn-primary' %>
    <%= link_to t('incoming_deliveries.buttons.cancel'), :back, class: 'btn btn-secondary' %>
  </div>
<% end %>