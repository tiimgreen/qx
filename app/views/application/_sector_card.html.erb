<% sectors_to_display = if project.workshop?
     project.sectors  # Direct association now returns Sector objects
   else
     sectors
   end %>
<% sectors_to_display.each do |sector| %>
  <div class="col-md-6 col-lg-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">
          <% case sector.key %>
          <% when 'incoming_delivery' %>
            <i class="bi bi-folder"></i> <%= project.incoming_deliveries.count %>
          <% when 'isometry' %>
            <i class="bi bi-diagram-3"></i> <%= project.isometries.count %>
          <% when 'prefabrication' %>
            <i class="bi bi-diagram-3"></i> <%= project.prefabrications.count %>
          <% when 'final_inspection' %>
            <i class="bi bi-diagram-3"></i> <%= project.final_inspections.count %>
          <% when 'work_preparation' %>
            <i class="bi bi-diagram-3"></i> <%= project.work_preparations.count %>
          <% when 'transport' %>
            <i class="bi bi-diagram-3"></i> <%= project.transports.count %>
          <% when 'site_assembly' %>
            <i class="bi bi-diagram-3"></i> <%= project.site_assemblies.count %>
          <% when 'site_delivery' %>
            <i class="bi bi-diagram-3"></i> <%= project.site_deliveries.count %>
          <% when 'on_site' %>
            <i class="bi bi-diagram-3"></i> <%= project.on_sites.count %>
          <% when 'test_pack' %>
            <i class="bi bi-diagram-3"></i> <%= project.test_packs.count %>
          <% when 'pre_welding' %>
            <i class="bi bi-diagram-3"></i> <%= project.pre_weldings.count %>
          <% else %>
            <i class="bi bi-diagram-3"></i> <%= MaterialCertificate.count %>
          <% end %>
        </h5>
        <p class="card-text">
          <div class="h3 mb-2"><%= t('sectors.' + sector.key) %></div>
          <%= t('sectors.' + sector.key + '_description') %>
        </p>

        <div class="mt-3">
          <% case sector.key %>
          <% when 'incoming_delivery' %>
            <%= link_to project_incoming_deliveries_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
            <%= link_to new_project_incoming_delivery_path(project), class: 'btn btn-primary' do %>
              <i class="bi bi-plus"></i> <%= t('common.labels.new') %>
            <% end %>
          <% when 'isometry' %>
            <%= link_to project_isometries_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
            <%= link_to new_project_isometry_path(project), class: 'btn btn-primary' do %>
              <i class="bi bi-plus"></i> <%= t('common.labels.new') %>
            <% end %>
          <% when 'material_certificate' %>
            <%= link_to material_certificates_path, class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
            <%= link_to new_material_certificate_path, class: 'btn btn-primary' do %>
              <i class="bi bi-plus"></i> <%= t('common.labels.new') %>
            <% end %>
          <% when 'prefabrication' %>
            <%= link_to project_prefabrications_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'final_inspection' %>
            <%= link_to project_final_inspections_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'work_preparation' %>
            <%= link_to project_work_preparations_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'transport' %>
            <%= link_to project_transports_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'site_delivery' %>
            <%= link_to project_site_deliveries_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'site_assembly' %>
            <%= link_to project_site_assemblies_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'on_site' %>
            <%= link_to project_on_sites_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'test_pack' %>
            <%= link_to project_test_packs_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% when 'pre_welding' %>
            <%= link_to project_pre_weldings_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('common.labels.overview') %>
            <% end %>
          <% end %>
        </div>

      </div>
    </div>
  </div>
<% end %>