<% sectors.each do |sector| %>
  <div class="col-md-6 col-lg-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title">
          <% case sector.key %>
          <% when 'incoming_deliveries' %>
            <i class="bi bi-folder"></i> <%= project.incoming_deliveries.count %>
          <% else %>
            <i class="bi bi-folder"></i> <%= sector.key.classify.constantize.count rescue 0 %>
          <% end %>
        </h5>
        <p class="card-text">
          <div class="h3 mb-2"><%= t('sectors.' + sector.key) %></div>
          <%= t('sectors.' + sector.key + '_description') %>
        </p>
        <div class="mt-3">
          <% case sector.key %>
          <% when 'incoming_delivery' %>
            <%= link_to project_incoming_deliveries_path(project), class: 'btn btn-outline-primary m-1 me-2' do %>
              <i class="bi bi-list"></i> <%= t('navigation.menu.incoming_deliveries.deliveries') %>
            <% end %>
            <%= link_to new_project_incoming_delivery_path(project), class: 'btn btn-primary' do %>
              <i class="bi bi-plus"></i> <%= t('navigation.menu.incoming_deliveries.new_delivery') %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>