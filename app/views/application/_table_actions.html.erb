<%# app/views/shared/_table_actions.html.erb %>
<div class="btn-group btn-group-sm">
    <%= link_to polymorphic_path(record),
                class: 'btn btn-outline-primary',
                title: 'Show',
                data: { bs_toggle: 'tooltip' } do %>
      <i class="bi bi-eye"></i>
    <% end %>

    <%= link_to edit_polymorphic_path(record),
                class: 'btn btn-outline-warning',
                title: 'Edit',
                data: { bs_toggle: 'tooltip' } do %>
      <i class="bi bi-pencil"></i>
    <% end %>

    <%= link_to polymorphic_path(record),
                class: 'btn btn-outline-danger',
                title: 'Delete',
                data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete this #{record.class.model_name.human.downcase}?",
                  bs_toggle: 'tooltip'
                } do %>
      <i class="bi bi-trash"></i>
    <% end %>
</div>
