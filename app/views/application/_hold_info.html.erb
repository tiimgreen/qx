<dt class="col-sm-4"><%= t('activerecord.attributes.delivery_item.on_hold_status') %></dt>
<dd class="col-sm-8"><%= status_label(record.on_hold_status) %></dd>

<% if record.on_hold_status? %>
  <dt class="col-sm-4"><%= t('common.messages.on_hold_comment') %></dt>
  <dd class="col-sm-8"><%= record.on_hold_comment %></dd>

  <dt class="col-sm-4"><%= t('common.messages.on_hold_at') %></dt>
  <dd class="col-sm-8"><%= record.on_hold_date.strftime("%d/%m/%Y %H:%M") if record.on_hold_date %></dd>
<% end %>