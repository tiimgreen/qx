<%# app/views/shared/_table.html.erb %>
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= title %></h5>
    <% if local_assigns[:new_link]%>
      <%= link_to new_link, class: 'btn btn-primary btn-sm' do %>
        <i class="bi bi-plus"></i> New <%= model_class.model_name.human %>
      <% end %>
    <% end %>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <% columns.each do |column| %>
              <th><%= column.to_s.titleize %></th>
            <% end %>
            <th class="text-end">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% records.each do |record| %>
            <tr>
              <% columns.each do |column| %>
                <td><%= render_column_value(record, column) %></td>
              <% end %>
              <td class="text-end">
                <%= render 'table_actions', record: record %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <% if records.respond_to?(:total_pages) %>
    <div class="card-footer">
      <%= paginate records, theme: 'bootstrap5' %>
    </div>
  <% end %>
</div>