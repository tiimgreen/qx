<div class="mb-3">
  <% breadcrumbs.each_with_index do |crumb, index| %>
    <% if index == breadcrumbs.length - 1 %>
      <%= link_to "#",
                 class: "btn btn-sm btn-primary",
                 disabled: true do %>
        <%= crumb[:text] %>
      <% end %>
    <% else %>
      <%= link_to crumb[:path],
                 class: "btn btn-sm btn-info me-1 text-white" do %>
        <%= crumb[:text] %>
      <% end %>
    <% end %>
  <% end %>
</div>