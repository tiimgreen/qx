<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.pre_weldings.title'),
    path: project_pre_weldings_path(@project) },
  { text: t('common.labels.new') }
] %>

<div class="mt-4">
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-diagram-2"></i> <%= t('activerecord.models.isometry') %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.line_id') %></dt>
            <dd class="col-sm-6"><%=link_to @pre_welding.isometry&.line_id, project_isometry_path(@project, @pre_welding.isometry) %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.page_number') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.isometry.page_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.revision_number') %></dt>
            <dd class="col-sm-6"><%= revision_status_label(@pre_welding.isometry) %></dd>

          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.pid_number') %>
            <dd class="col-sm-6"><%= @pre_welding.isometry.pid_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.material') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.isometry.material %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.system') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.isometry.system %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0"><%= t('.title', work_package: @pre_welding.work_package_number) %></h2>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.work_package_number') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.work_package_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.user') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.user.name %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.completed') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.completed.strftime("%d/%m/%Y %H:%M") if @pre_welding.completed %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.on_hold_status') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.on_hold_status %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.on_hold_date') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.on_hold_date.strftime("%d/%m/%Y %H:%M") if @pre_welding.on_hold_date %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.pre_welding.on_hold_comment') %></dt>
            <dd class="col-sm-6"><%= @pre_welding.on_hold_comment %></dd>

            <%= render partial: 'application/docuvita_documents', locals: {
              documents: @pre_welding.on_hold_images,
              title: t('.on_hold_images')
            } %>

          </dl>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <%= link_to t('common.labels.back'), project_pre_weldings_path(@project), class: 'btn btn-primary' %>
        <%= link_to t('common.labels.back_isometry'), project_isometry_path(@project, @pre_welding.isometry), class: 'btn btn-primary' %>

        <% if current_user.can_edit?("PreWelding") %>
          <%= link_to edit_project_pre_welding_path(@project, @pre_welding), class: 'btn btn-outline-primary' do %>
            <i class="bi bi-pencil"></i> <%= t('common.labels.edit') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
