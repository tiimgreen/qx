<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.site_assemblies'),
    path: project_site_assemblies_path(@project) }
] %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title_for_project', project: @project.name) %></h1>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <%= form_tag project_site_assemblies_path(@project), method: :get do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
                            class: 'form-control',
                            placeholder: t('common.labels.search_placeholder') %>
          <div class="input-group-append">
            <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.isometry.line_id') %></th>
          <th><%= t('activerecord.attributes.isometry.page_number') %></th>
          <th><%= t('activerecord.attributes.isometry.revision_number') %></th>
          <th>
            <%= link_to t('activerecord.attributes.site_assembly.work_package_number'),
                request.params.merge(sort: 'work_package_number', direction: (params[:sort] == 'work_package_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('work_package_number') if params[:sort] == 'work_package_number' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.site_assembly.on_hold_status'),
                request.params.merge(sort: 'on_hold_status', direction: (params[:sort] == 'on_hold_status' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('on_hold_status') if params[:sort] == 'on_hold_status' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.site_assembly.completed'),
                request.params.merge(sort: 'completed', direction: (params[:sort] == 'completed' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('completed') if params[:sort] == 'completed' %>
          </th>
          <th><%= t('common.labels.created_by') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @site_assemblies.each do |site_assembly| %>
          <tr>
            <td><%= link_to site_assembly.isometry&.line_id, project_isometry_path(@project, site_assembly.isometry) %></td>
            <td><%= site_assembly.isometry.page_number %></td>
            <td><%= site_assembly.isometry.revision_number %></td>
            <td><%= site_assembly.work_package_number %></td>
            <td><%= status_label(site_assembly.on_hold_status) %></td>
            <td><%= l(site_assembly.completed, format: :short) if site_assembly.completed %></td>
            <td><%= site_assembly.user.name %></td>
            <td class="text-end">
              <% if current_user.can_view?("SiteAssembly") %>
                <%= link_to project_site_assembly_path(@project, site_assembly), class: 'btn btn-sm btn-outline-primary' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              <% end %>
              <% if current_user.can_edit?("SiteAssembly") %>
                <%= link_to edit_project_site_assembly_path(@project, site_assembly), class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if current_user.can_delete?("SiteAssembly") %>
                  <%= button_tag type: 'button',
                             class: 'btn btn-outline-danger m-1',
                             title: t('common.buttons.delete'),
                             data: {
                               bs_toggle: "modal",
                               bs_target: "#deleteSiteAssemblyModal",
                               "project-id": site_assembly.project.id,
                               "site-assembly-id": site_assembly.id,
                               "site-assembly-name": site_assembly.work_package_number,
                               "site-assembly-number": site_assembly.work_package_number
                             } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'delete_confirmation_modal', 
           locals: {
             modal_id: 'deleteSiteAssemblyModal',
             controller_name: 'delete-site-assembly',
             model_name: 'site_assembly'
           } %>