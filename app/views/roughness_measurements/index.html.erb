<div class="container mt-4">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><%= t('.title') %></h5>

    </div>

    <div class="card-body">
      <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('.delivery_item') %></th>
          <th><%= t('.measurement_date') %></th>
          <th><%= t('.measured_value') %></th>
          <th><%= t('.parameters') %></th>
          <th><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @roughness_measurements.each do |measurement| %>
          <tr>
            <td><%= link_to "Delivery Item ##{measurement.delivery_item.id}", delivery_item_path(measurement.delivery_item) %></td>
            <td><%= measurement.measurement_date.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= measurement.measured_value %></td>
            <td><%= measurement.measurement_parameters %></td>
            <td>
              <div class="btn-group btn-group-sm">
                <%= link_to delivery_item_path(measurement.delivery_item),
                          class: 'btn btn-outline-info m-1',
                          title: t('roughness_measurements.buttons.view'),
                          data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_delivery_item_roughness_measurement_path(measurement.delivery_item),
                          class: 'btn btn-outline-primary m-1',
                          title: t('roughness_measurements.buttons.edit'),
                          data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </div>
            </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
