<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
  </div>

  <%= form_tag roughness_measurements_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search],
                        class: 'form-control',
                        placeholder: t('common.labels.search_placeholder') %>
      <div class="input-group-append">
        <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.models.project') %></th>
          <th><%= t('activerecord.attributes.delivery_item.tag_number') %></th>
          <th><%= t('activerecord.attributes.delivery_item.batch_number') %></th>
          <th><%= t('.measurement_date') %></th>
          <th><%= t('.measured_value') %></th>
          <th><%= t('.parameters') %></th>
          <th><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @roughness_measurements.each do |measurement| %>
          <tr>
            <td><%= measurement.delivery_item.incoming_delivery.project.name %></td>
            <td><%= link_to "Item TAG ##{measurement.delivery_item.tag_number}", delivery_item_path(measurement.delivery_item) %></td>
            <td><%= measurement.delivery_item.batch_number %></td>
            <td><%= measurement.measurement_date.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= measurement.measured_value %></td>
            <td><%= measurement.measurement_parameters %></td>
            <td>
              <div class="btn-group btn-group-sm">
                <%= link_to delivery_item_path(measurement.delivery_item),
                          class: 'btn btn-outline-info m-1',
                          title: t('roughness_measurements.buttons.view'),
                          data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_delivery_item_roughness_measurement_path(measurement.delivery_item),
                          class: 'btn btn-outline-primary m-1',
                          title: t('roughness_measurements.buttons.edit'),
                          data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
