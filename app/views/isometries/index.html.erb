<%= render 'breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.isometries.title') }
] %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title_for_project', project: @project.name) %></h1>
  </div>

  <div class="row mb-4">
    <div class="col-md-6">
      <%= form_tag project_isometries_path(@project), method: :get, class: 'row g-2' do %>
        <div class="col-md-12">
          <div class="input-group">
            <%= text_field_tag :search, params[:search],
                              class: 'form-control',
                              placeholder: t('common.labels.search_placeholder') %>
            <%= hidden_field_tag :revision_filter, params[:revision_filter] %>
            <div class="input-group-append">
              <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-2">
      <% if Rails.env.development? %>
        <%= form_tag project_isometries_path(@project), method: :get, class: 'd-inline' do %>
          <%= hidden_field_tag :search, params[:search] %>
          <div class="input-group">
            <%= select_tag :revision_filter,
                          options_for_select([
                            [t('.filter.latest_revisions'), 'latest'],
                            [t('.filter.old_revisions'), 'old'],
                            [t('.filter.all_revisions'), 'all']
                          ], params[:revision_filter] || 'latest'),
                          class: 'form-select',
                          onchange: 'this.form.submit()' %>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="col-md-4 text-end">
      <% if current_user.can_create?("Isometry") %>
        <%= link_to new_project_isometry_path(@project), class: 'btn btn-primary' do %>
          <i class="bi bi-plus"></i> <%= t('isometries.buttons.new_isometry') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>
            <%= link_to t('activerecord.attributes.isometry.line_id'),
                request.params.merge(sort: 'line_id', direction: (params[:sort] == 'line_id' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('line_id') %>
          </th>
          <th>
            <%= t('common.labels.page_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.work_package_number'),
                request.params.merge(sort: 'work_package_number', direction: (params[:sort] == 'work_package_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('work_package_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.system'),
                request.params.merge(sort: 'system', direction: (params[:sort] == 'system' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('system') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.pid_number'),
                request.params.merge(sort: 'pid_number', direction: (params[:sort] == 'pid_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('pid_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.revision_number'),
                request.params.merge(sort: 'revision_number', direction: (params[:sort] == 'revision_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('revision_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.material'),
                request.params.merge(sort: 'material', direction: (params[:sort] == 'material' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('material') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.received_date'),
                request.params.merge(sort: 'received_date', direction: (params[:sort] == 'received_date' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('received_date') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.isometry.on_hold_status'),
                request.params.merge(sort: 'on_hold_status', direction: (params[:sort] == 'on_hold_status' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('on_hold_status') %>
          </th>
          <th>
            <%= t('common.labels.weldings') %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @isometries.each do |isometry| %>
          <tr>
            <td><%= link_to isometry.line_id, project_isometry_path(@project, isometry) %></td>
            <td><%= isometry.page_number %>/<%= isometry.page_total %></td>
            <td><%= isometry.work_package_number %></td>
            <td><%= isometry.system %></td>
            <td><%= isometry.pid_number %> Rev.<%= isometry.pid_revision %></td>
            <td><span class="<%= isometry.revision_last ? 'badge bg-success text-white' : 'badge bg-danger text-white' %>"><%= isometry.revision_number %></span></td>
            <td><%= isometry.material %></td>
            <td><%= l(isometry.received_date, format: :short) if isometry.received_date %></td>
            <td>
                <%= status_label(isometry.on_hold_status)  %>
            </td>
            <td>
              <% if isometry.weldings_count > 0 && isometry.weldings_missing_certificates? %>
                <span class="badge bg-danger">
                  <%= isometry.weldings_count %>
                </span>
                <% elsif isometry.weldings_count > 0 %>
                  <span class="badge bg-success">
                    <%= isometry.weldings_count %>
                  </span>
                <% end %>
            </td>
            <td class="text-end">
              <% if isometry.page_number == 1 && isometry.revision_last? %>
                <%= button_to create_revision_project_isometry_path(@project, isometry),
                            method: :post,
                            class: 'btn btn-sm btn-outline-primary me-2',
                            form: { style: 'display: inline-block' },
                            data: { turbo_confirm: t('.confirm_revision') } do %>
                  <i class="bi bi-plus-circle"></i> <%= t('.create_revision') %>
                <% end %>
              <% end %>
              <% if current_user.can_view?("Isometry") %>
                <%= link_to project_isometry_path(@project, isometry), 
                  class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              <% end %>
              <% if current_user.can_edit?("Isometry") %>
                <%= link_to edit_project_isometry_path(@project, isometry), 
                  class: 'btn btn-sm btn-outline-primary m-1',
                  title: t('common.actions.edit'),
                  data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if current_user.can_delete?("Isometry") %>
                <%= button_tag type: 'button',
                           class: 'btn btn-sm btn-outline-danger m-1',
                           title: t('isometries.buttons.delete'),
                           data: {
                             bs_toggle: "modal",
                             bs_target: "#deleteIsometryModal",
                             "isometry-id": isometry.id,
                             "isometry-name": isometry.line_id,
                             "isometry-number": isometry.line_id,
                             "project-id": @project.id
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if @isometries.empty? %>
    <div class="alert alert-info">
      <%= t('.no_isometries') %>
    </div>
  <% end %>
</div>

<%= render partial: 'delete_confirmation_modal', 
           locals: {
             modal_id: 'deleteIsometryModal',
             controller_name: 'delete-isometry',
             model_name: 'isometry'
           } %>
