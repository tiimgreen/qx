<!-- app/views/missing_delivery_items/show.html.erb -->
<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><%= t('.title') %></h2>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3"><%= t('.delivery_reference') %>:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.incoming_delivery.order_number %></dd>

        <dt class="col-sm-3"><%= t('.expected_quantity') %>:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.expected_quantity %></dd>

        <dt class="col-sm-3"><%= t('.order_line_reference') %>:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.order_line_reference %></dd>

        <dt class="col-sm-3"><%= t('.description') %>:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.description %></dd>

        <dt class="col-sm-3"><%= t('.reported_at') %>:</dt>
        <dd class="col-sm-9"><%= l(@missing_delivery_item.created_at, format: :long) %></dd>
      </dl>
    </div>
    <div class="card-footer">
      <div class="btn-group">
        <%= link_to edit_missing_delivery_item_path(@missing_delivery_item),
                    class: 'btn btn-outline-primary m-1',
                    title: t('missing_delivery_items.buttons.edit'),
                    data: { bs_toggle: 'tooltip' } do %>
          <i class="bi bi-pencil"></i>
        <% end %>
        <%= link_to incoming_delivery_missing_delivery_items_path(@missing_delivery_item.incoming_delivery),
                    class: 'btn btn-outline-secondary m-1',
                    title: t('missing_delivery_items.buttons.back'),
                    data: { bs_toggle: 'tooltip' } do %>
          <i class="bi bi-arrow-left"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
