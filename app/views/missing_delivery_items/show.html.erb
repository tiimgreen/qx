<!-- app/views/missing_delivery_items/show.html.erb -->
<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0">Missing Item Details</h2>
    </div>
    <div class="card-body">
      <dl class="row">
        <dt class="col-sm-3">Delivery Reference:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.incoming_delivery.order_number %></dd>

        <dt class="col-sm-3">Expected Quantity:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.expected_quantity %></dd>

        <dt class="col-sm-3">Order Line Reference:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.order_line_reference %></dd>

        <dt class="col-sm-3">Description:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.description %></dd>

        <dt class="col-sm-3">Reported At:</dt>
        <dd class="col-sm-9"><%= @missing_delivery_item.created_at.strftime("%B %d, %Y %H:%M") %></dd>
      </dl>
    </div>
    <div class="card-footer">
      <div class="btn-group">
        <%= link_to 'Edit', edit_missing_delivery_item_path(@missing_delivery_item), class: 'btn btn-primary' %>
        <%= link_to 'Back', incoming_delivery_missing_delivery_items_path(@missing_delivery_item.incoming_delivery), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
