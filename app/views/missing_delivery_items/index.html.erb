<!-- app/views/missing_delivery_items/index.html.erb -->
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
    <% if @incoming_delivery %>
      <%= link_to new_incoming_delivery_missing_delivery_item_path(@incoming_delivery),
                  class: 'btn btn-success' do %>
        <i class="bi bi-plus"></i> <%= t('.report_missing') %>
      <% end %>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.missing_delivery_item.delivery_reference') %></th>
          <th><%= t('activerecord.attributes.missing_delivery_item.expected_quantity') %></th>
          <th><%= t('activerecord.attributes.missing_delivery_item.order_line_reference') %></th>
          <th><%= t('activerecord.attributes.missing_delivery_item.description') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @missing_delivery_items.each do |item| %>
          <tr>
            <td><%= item.incoming_delivery.order_number %></td>
            <td><%= item.expected_quantity %></td>
            <td><%= item.order_line_reference %></td>
            <td><%= truncate(item.description, length: 50) %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to item,
                           class: 'btn btn-outline-info',
                           title: t('missing_delivery_items.buttons.view'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_missing_delivery_item_path(item),
                           class: 'btn btn-outline-primary',
                           title: t('missing_delivery_items.buttons.edit'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_to missing_delivery_item_path(item),
                           method: :delete,
                           class: 'btn btn-outline-danger',
                           title: t('missing_delivery_items.buttons.delete'),
                           form: { style: 'display: inline' },
                           data: {
                             turbo_confirm: t('common.messages.confirm_delete',
                                            model: MissingDeliveryItem.model_name.human.downcase),
                             bs_toggle: 'tooltip'
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




