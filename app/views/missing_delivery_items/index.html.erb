<!-- app/views/missing_delivery_items/index.html.erb -->
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Missing Delivery Items</h1>
    <% if @incoming_delivery %>
      <%= link_to 'Report Missing Item', new_incoming_delivery_missing_delivery_item_path(@incoming_delivery), class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Delivery Reference</th>
          <th>Expected Quantity</th>
          <th>Order Line Ref</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @missing_delivery_items.each do |item| %>
          <tr>
            <td><%= item.incoming_delivery.reference_number %></td>
            <td><%= item.expected_quantity %></td>
            <td><%= item.order_line_reference %></td>
            <td><%= truncate(item.description, length: 50) %></td>
            <td>
              <div class="btn-group" role="group">
                <%= link_to 'View', item, class: 'btn btn-sm btn-info' %>
                <%= link_to 'Edit', edit_missing_delivery_item_path(item), class: 'btn btn-sm btn-primary' %>
                <%= link_to 'Delete', item,
                    method: :delete,
                    class: 'btn btn-sm btn-danger',
                    data: { turbo_confirm: 'Are you sure?' } %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




