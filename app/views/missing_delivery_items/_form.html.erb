<!-- app/views/missing_delivery_items/_form.html.erb -->
<%= form_with(model: [@incoming_delivery, @missing_delivery_item], local: true) do |f| %>
  <% if @missing_delivery_item.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t('missing_delivery_items.form.errors.header',
                count: @missing_delivery_item.errors.count) %></h4>
      <ul>
        <% @missing_delivery_item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= f.label :expected_quantity, class: 'form-label' %>
    <%= f.number_field :expected_quantity, class: 'form-control', required: true, min: 1 %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :order_line_reference, class: 'form-label' %>
    <%= f.text_field :order_line_reference, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 4, required: true %>
    <small class="form-text text-muted"><%= t('.description_hint') %></small>
  </div>

  <div class="form-group">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
    <%= link_to t('.cancel'),
                incoming_delivery_missing_delivery_items_path(@incoming_delivery),
                class: 'btn btn-secondary' %>
  </div>
<% end %>
