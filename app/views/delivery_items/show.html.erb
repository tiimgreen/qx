<%= render 'breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.incoming_deliveries.deliveries'),
    path: project_incoming_deliveries_path(@project) },
  { text: @incoming_delivery.order_number,
    path: project_incoming_delivery_path(@project, @incoming_delivery) },
  { text: @delivery_item.name || @delivery_item.tag_number }
] %>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('.title') %></h5>
    <div class="btn-group btn-group-sm">
      <%= link_to edit_project_incoming_delivery_delivery_item_path(@delivery_item.incoming_delivery.project, @delivery_item.incoming_delivery, @delivery_item),
                  class: 'btn btn-outline-primary m-1',
                  title: t('delivery_items.buttons.edit'),
                  data: { bs_toggle: 'tooltip' } do %>
        <i class="bi bi-pencil"></i>
      <% end %>
      <%= link_to project_incoming_delivery_path(@delivery_item.incoming_delivery.project, @delivery_item.incoming_delivery),
                  class: 'btn btn-outline-secondary m-1',
                  title: t('delivery_items.buttons.back'),
                  data: { bs_toggle: 'tooltip' } do %>
        <i class="bi bi-arrow-left"></i>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <!-- Basic Information -->
    <div class="mb-4">
      <h6 class="border-bottom pb-2 mb-3"><%= t('.basic_info') %></h6>
      <dl class="row">
        <dt class="col-sm-3"><%= t('activerecord.attributes.delivery_item.name') %></dt>
        <dd class="col-sm-9"><%= @delivery_item.name %></dd>

        <dt class="col-sm-3"><%= t('activerecord.attributes.delivery_item.tag_number') %></dt>
        <dd class="col-sm-9"><%= @delivery_item.tag_number %></dd>

        <dt class="col-sm-3"><%= t('activerecord.attributes.delivery_item.batch_number') %></dt>
        <dd class="col-sm-9"><%= @delivery_item.batch_number %></dd>
      </dl>
    </div>

    <!-- Quality Checks -->
    <div class="mb-4">
      <h6 class="border-bottom pb-2 mb-3"><%= t('.quality_checks') %></h6>

      <% checks = [
        { name: 'quantity_check', status: @delivery_item.quantity_check_status, comment: @delivery_item.quantity_check_comment, images: @delivery_item.quantity_check_images },
        { name: 'dimension_check', status: @delivery_item.dimension_check_status, comment: @delivery_item.dimension_check_comment, images: @delivery_item.dimension_check_images },
        { name: 'visual_check', status: @delivery_item.visual_check_status, comment: @delivery_item.visual_check_comment, images: @delivery_item.visual_check_images },
        { name: 'vt2_check', status: @delivery_item.vt2_check_status, comment: @delivery_item.vt2_check_comment, images: @delivery_item.vt2_check_images },
        { name: 'ra_check', status: @delivery_item.ra_check_status, comment: @delivery_item.ra_check_comment, images: @delivery_item.ra_check_images }
      ] %>

      <div class="row g-3">
        <% checks.each do |check| %>
          <div class="col-md-6">
            <div class="card h-100">
              <div class="card-body">
                <h6 class="card-title d-flex justify-content-between align-items-center">
                  <%= t("activerecord.attributes.delivery_item.#{check[:name]}") %>
                  <%= status_label(check[:status]) %>
                </h6>
                <% if check[:comment].present? %>
                  <p class="card-text text-muted mb-0">
                    <small><%= check[:comment] %></small>
                  </p>
                <% end %>

                <!-- Image attachments section -->
                <% if check[:images].attached? %>
                  <div class="mt-3">
                    <div class="row g-2">
                      <% check[:images].each do |image| %>
                        <div class="col-6">
                          <%= image_tag image, class: "img-thumbnail w-100",
                              data: {
                                bs_toggle: "modal",
                                bs_target: "#imageModal#{image.id}"
                              } %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Description -->
    <div class="mb-4">
      <h6 class="border-bottom pb-2 mb-3"><%= t('.description') %></h6>
      <p class="mb-0"><%= @delivery_item.item_description %></p>
    </div>

    <!-- Specifications -->
    <div>
      <h6 class="border-bottom pb-2 mb-3"><%= t('.specifications') %></h6>
      <% if @delivery_item.specifications.present? %>
        <dl class="row">
          <% @delivery_item.specifications.each do |key, value| %>
            <dt class="col-sm-3"><%= key.humanize %></dt>
            <dd class="col-sm-9"><%= value %></dd>
          <% end %>
        </dl>
      <% else %>
        <p class="text-muted"><%= t('.no_specifications') %></p>
      <% end %>
    </div>
  </div>
</div>

<!-- Image Modals -->
<% %w[quantity_check_images dimension_check_images visual_check_images vt2_check_images ra_check_images].each do |image_type| %>
  <% @delivery_item.send(image_type).each do |image| %>
    <div class="modal fade" id="imageModal<%= image.id %>" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title"><%= image_type.humanize %></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= image_tag image, class: "img-fluid w-100" %>
          </div>
          <div class="modal-footer">
            <%= button_to delete_image_project_incoming_delivery_delivery_item_path(
                  project_id: @project,
                  incoming_delivery_id: @incoming_delivery,
                  id: @delivery_item,
                  image_id: image.id,
                  image_type: image_type
                ),
                method: :delete,
                class: "btn btn-danger",
                data: {
                  turbo_confirm: t('common.messages.confirm_delete'),
                  bs_dismiss: "modal"
                } do %>
              <i class="bi bi-trash"></i> <%= t('common.buttons.delete') %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<!-- Quality Inspections Section -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('.quality_inspections') %></h5>
    <div>
      <%= link_to new_delivery_item_quality_inspection_path(@delivery_item),
                  class: 'btn btn-primary btn-sm' do %>
        <i class="bi bi-plus"></i> <%= t('.new_inspection') %>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <%= render 'quality_inspections/table', inspections: @quality_inspections %>
  </div>
</div>

<!-- Ra Measurement Section -->
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('.ra_measurement') %></h5>
    <div>
      <% if @roughness_measurement %>
        <%= link_to edit_delivery_item_roughness_measurement_path(@delivery_item),
                    class: 'btn btn-primary btn-sm' do %>
          <i class="bi bi-pencil"></i> <%= t('.edit_measurement') %>
        <% end %>
      <% else %>
        <%= link_to new_delivery_item_roughness_measurement_path(@delivery_item),
                    class: 'btn btn-primary btn-sm' do %>
          <i class="bi bi-plus"></i> <%= t('.record_measurement') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="card-body">
    <% if @roughness_measurement %>
      <%= render 'roughness_measurements/details', measurement: @roughness_measurement %>
    <% else %>
      <p class="text-muted"><%= t('.no_measurement') %></p>
    <% end %>
  </div>
</div>


<!-- Material Certificates Section -->
<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('.material_certificates') %></h5>
    <div>
      <%#= link_to new_material_certificate_path(delivery_item_id: @delivery_item.id),
                  class: 'btn btn-primary btn-sm' do %>
        <i class="bi bi-plus"></i> <%= t('.new_certificate') %>
      <%# end %>
    </div>
  </div>

  <div class="card-body">
    <% if @delivery_item.material_certificates.any? %>
      <div class="table-responsive">
        <table class="table table-striped table-hover table-sm">
          <thead>
            <tr>
              <th><%= t('activerecord.attributes.material_certificate.certificate_number') %></th>
              <th><%= t('activerecord.attributes.material_certificate.batch_number') %></th>
              <th><%= t('activerecord.attributes.material_certificate.issue_date') %></th>
              <th><%= t('activerecord.attributes.material_certificate.issuer_name') %></th>
              <th class="text-end"><%= t('common.labels.actions') %></th>
            </tr>
          </thead>
          <tbody>
            <% @delivery_item.material_certificates.each do |certificate| %>
              <tr>
                <td><%= certificate.certificate_number %></td>
                <td><%= certificate.batch_number %></td>
                <td><%= certificate.issue_date.strftime("%Y-%m-%d") %></td>
                <td><%= certificate.issuer_name %></td>
                <td class="text-end">
                  <div class="btn-group btn-group-sm">
                    <%= link_to material_certificate_path(certificate),
                               class: 'btn btn-outline-info m-1',
                               title: t('material_certificates.buttons.view'),
                               data: { bs_toggle: 'tooltip' } do %>
                      <i class="bi bi-eye"></i>
                    <% end %>

                    <%= link_to edit_material_certificate_path(certificate),
                               class: 'btn btn-outline-primary m-1',
                               title: t('material_certificates.buttons.edit'),
                               data: { bs_toggle: 'tooltip' } do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-muted"><%= t('.no_certificates') %></p>
    <% end %>
  </div>
</div>