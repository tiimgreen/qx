<div class="table-responsive">
  <table class="table table-striped table-hover table-sm">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.delivery_item.name') %></th>
        <th><%= t('activerecord.attributes.delivery_item.tag_number') %></th>
        <th><%= t('activerecord.attributes.delivery_item.batch_number') %></th>
        <th><%= t('activerecord.attributes.delivery_item.target_quantity') %></th>
        <th><%= t('activerecord.attributes.delivery_item.actual_quantity') %></th>
        <th><%= t('activerecord.attributes.delivery_item.quantity_check') %></th>
        <th><%= t('activerecord.attributes.delivery_item.dimension_check') %></th>
        <th><%= t('activerecord.attributes.delivery_item.visual_check') %></th>
        <th><%= t('activerecord.attributes.delivery_item.vt2_check') %></th>
        <th><%= t('activerecord.attributes.delivery_item.ra_check') %></th>
        <th class="text-end"><%= t('common.labels.actions') %></th>
      </tr>
    </thead>

    <tbody>
      <% delivery_items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.tag_number %></td>
          <td><%= item.batch_number %></td>
          <td><%= item.target_quantity %></td>
          <td><%= item.actual_quantity %></td>
          <td><%= status_label(item.quantity_check_status) %></td>
          <td><%= status_label(item.dimension_check_status) %></td>
          <td><%= status_label(item.visual_check_status) %></td>
          <td><%= status_label(item.vt2_check_status) %></td>
          <td><%= status_label(item.ra_check_status) %></td>
          <td class="text-end">
            <div class="btn-group btn-group-sm">
              <%= link_to project_incoming_delivery_delivery_item_path(@project, @incoming_delivery, item),
                         class: 'btn btn-outline-info m-1',
                         title: t('delivery_items.buttons.view'),
                         data: { bs_toggle: 'tooltip' } do %>
                <i class="bi bi-eye"></i>
              <% end %>

              <%= link_to edit_project_incoming_delivery_delivery_item_path(@project, @incoming_delivery, item),
                         class: 'btn btn-outline-primary m-1',
                         title: t('delivery_items.buttons.edit'),
                         data: { bs_toggle: 'tooltip' } do %>
                <i class="bi bi-pencil"></i>
              <% end %>

              <%= button_to project_incoming_delivery_delivery_item_path(@project, @incoming_delivery, item),
                         method: :delete,
                         class: 'btn btn-outline-danger m-1',
                         title: t('delivery_items.buttons.delete'),
                         form: { style: 'display: inline' },
                         data: { confirm: t('common.messages.confirm_delete', model: DeliveryItem.model_name.human.downcase),
                                 bs_toggle: 'tooltip' } do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


