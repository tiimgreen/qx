<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0"><%= t('.select_sector') %></h4>
        </div>
        <div class="card-body">
          <p class="text-muted mb-4"><%= t('.please_select_sector') %></p>
          
          <div class="list-group">
            <% @sectors.each do |sector| %>
              <%= link_to select_sector_qr_code_path(@isometry, sector_id: sector.id),
                    class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                <%= sector.name %>
                <i class="bi bi-chevron-right"></i>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
