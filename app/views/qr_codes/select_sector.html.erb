<div class="mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">

        <% if !@isometry.project.archived? %>
          <div class="card-header">
            <h4 class="mb-0"><%= t('.select_sector') %></h4>
          </div>
          <div class="card-body">
            <p class="text-muted mb-4"><%= t('.please_select_sector') %></p>
            
            <div class="list-group">
              <% @sectors.each do |sector| %>
              <% if sector.key == "work_preparation" %>
                <div class="list-group-item">
                  <h5 class="mb-3"><%= sector.name %></h5>
                  
                  <% existing_items = WorkPreparation.where(isometry: @isometry) %>
                  <% if existing_items.any? %>
                    <div class="mb-3">
                      <h6><%= t('.existing_items') %></h6>
                      <% existing_items.each do |item| %>
                        <%= link_to edit_project_work_preparation_path(@isometry.project, item),
                              class: "btn btn-outline-primary btn-sm me-2 mb-2" do %>
                          <%= item.work_package_number %> (<%= t("work_preparations.types.#{item.work_preparation_type}")  %>)
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>

                  <% existing_types = existing_items.pluck(:work_preparation_type) %>
                  <% available_types = WorkPreparation::WORK_PREPARATION_TYPES - existing_types %>
                  
                  <% if available_types.any? %>
                    <div class="mb-3">
                      <h6><%= t('.create_new') %></h6>
                      <% available_types.each do |type| %>
                        <%= link_to new_project_work_preparation_path(@isometry.project, work_preparation_type: type, isometry_id: @isometry.id),
                              class: "btn btn-primary btn-sm me-2" do %>
                          <%= t(".new_#{type}") %>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% elsif sector.key == "test_pack" %>
                <div class="list-group-item">
                  <h5 class="mb-3"><%= sector.name %></h5>
                  
                  <% existing_items = TestPack.where(isometry: @isometry) %>
                  <% if existing_items.any? %>
                    <div class="mb-3">
                      <h6><%= t('.existing_items') %></h6>
                      <% existing_items.each do |item| %>
                        <%= link_to edit_project_test_pack_path(@isometry.project, item),
                              class: "btn btn-outline-primary btn-sm me-2 mb-2" do %>
                          <%= item.work_package_number %> (<%= t("test_packs.types.#{item.test_pack_type}")  %>)
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>

                  <% existing_types = existing_items.pluck(:test_pack_type) %>
                  <% available_types = TestPack::TEST_PACK_TYPES - existing_types %>
                  
                  <% if available_types.any? %>
                    <div class="mb-3">
                      <h6><%= t('.create_new') %></h6>
                      <% available_types.each do |type| %>
                        <%= link_to new_project_test_pack_path(@isometry.project, test_pack_type: type, isometry_id: @isometry.id),
                              class: "btn btn-primary btn-sm me-2" do %>
                          <%= t(".new_#{type}") %>
                        <% end %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <%= link_to select_sector_qr_code_path(@isometry, sector_id: sector.id),
                      class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
                  <%= sector.name %>
                  <i class="bi bi-chevron-right"></i>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
        <% else %>
          <div class="card-header">
            <h4 class="mb-0"><%= t('.project_archived') %></h4>
          </div>
          <div class="card-body">
        <dl class="row">
          <dt class="col-sm-3"><%= t('.project_number') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.project_number %></dd>

          <dt class="col-sm-3"><%= t('.client_name') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.client_name %></dd>

          <dt class="col-sm-3"><%= t('.name') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.name %></dd>

          <dt class="col-sm-3"><%= t('activerecord.attributes.project.project_manager_client') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.project_manager_client%></dd>

          <dt class="col-sm-3"><%= t('activerecord.attributes.project.project_manager_qualinox') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.project_manager_qualinox %></dd>

          <dt class="col-sm-3"><%= t('.project_end') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.project_end.strftime("%d/%m/%Y") if @isometry.project.project_end%></dd>

          <dt class="col-sm-3"><%= t('.created_by') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.user&.name %></dd>

          <dt class="col-sm-3"><%= t('.created') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.created_at.strftime("%d/%m/%Y %H:%M") %></dd>

          <dt class="col-sm-3"><%= t('.workshop') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.workshop ? t('common.labels.yes') : t('common.labels.no') %></dd>

          <dt class="col-sm-3"><%= t('.archived') %></dt>
          <dd class="col-sm-9"><%= @isometry.project.archived ? t('common.labels.yes') : t('common.labels.no') %></dd>
        </dl>
        <p class="text-muted my-4 text-center"><%= t('.project_archived_message') %></p>
          
        <p class="text-muted mb-4 text-center"><%= link_to t('.back_to_dashboard'), dashboard_path, class: 'btn btn-primary btn-sm' %></p>


        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
