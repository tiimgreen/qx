<%= form_with(
      model: @material_certificate.new_record? ? [@project, @material_certificate] : @material_certificate,
      local: true
    ) do |f| %>
  <% if @material_certificate.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= t('.errors.header', count: @material_certificate.errors.count) %></h4>
      <ul>
        <% @material_certificate.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :certificate_number,
            t('.certificate_number_last', number: MaterialCertificate.last&.certificate_number),
            class: 'form-label' %>
        <%= f.text_field :certificate_number, class: 'form-control', required: true %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :batch_number, class: 'form-label' %>
        <%= f.text_field :batch_number, class: 'form-control', required: true %>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group mb-3">
        <%= f.label :issue_date, class: 'form-label' %>
        <%= f.date_field :issue_date, class: 'form-control', required: true, value: Date.current.strftime('%Y-%m-%d') %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :issuer_name, class: 'form-label' %>
        <%= f.text_field :issuer_name, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description, class: 'form-label' %>
    <%= f.text_area :description, class: 'form-control', rows: 5 %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :certificate_file, class: 'form-label' %>
    <%= f.file_field :certificate_file, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%#= f.label :delivery_items, t('.associated_items'), class: 'form-label' %>
    <div class="delivery-items-selection border p-3 rounded">
      <%#= f.collection_check_boxes :delivery_item_ids, @delivery_items, :id, :tag_number do |b| %>
        <div class="form-check">
          <%#= b.check_box(class: 'form-check-input') %>
          <%#= b.label class: 'form-check-label' do %>
            <%#= t('.tag_batch_delivery',
                  tag: b.text,
                  batch: b.object.batch_number,
                  delivery: b.object.incoming_delivery.order_number) %>
          <%# end %>
        </div>
      <%# end %>
    </div>
  </div>

  <div class="form-group mt-4">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
    <%= link_to t('.cancel'), material_certificates_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

