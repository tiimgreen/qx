<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>Material Certificate Details</h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong>Certificate Number:</strong> <%= @material_certificate.certificate_number %></p>
          <p><strong>Batch Number:</strong> <%= @material_certificate.batch_number %></p>
          <p><strong>Issue Date:</strong> <%= @material_certificate.issue_date %></p>
          <p><strong>Issuer:</strong> <%= @material_certificate.issuer_name %></p>
        </div>
        <div class="col-md-6">
          <% if @material_certificate.certificate_file.attached? %>
            <p><strong>Certificate File:</strong>
              <%= link_to "Download Certificate", rails_blob_path(@material_certificate.certificate_file, disposition: "attachment"), class: "btn btn-sm btn-primary" %>
            </p>
          <% end %>
        </div>
      </div>

      <% if @material_certificate.description.present? %>
        <div class="mt-3">
          <h4>Description</h4>
          <p><%= @material_certificate.description %></p>
        </div>
      <% end %>

      <div class="mt-4">
        <h4>Associated Delivery Items</h4>
        <% if @delivery_items.any? %>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Tag Number</th>
                  <th>Batch Number</th>
                  <th>Delivery Order</th>
                  <th>Quantity</th>
                </tr>
              </thead>
              <tbody>
                <% @delivery_items.each do |item| %>
                  <tr>
                    <td><%= item.tag_number %></td>
                    <td><%= item.batch_number %></td>
                    <td><%= item.incoming_delivery.order_number %></td>
                    <td><%= item.quantity_received %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted">No delivery items associated with this certificate.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>