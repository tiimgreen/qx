<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2><%= t('.title') %></h2>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <p><strong><%= t('.certificate_number') %>:</strong> <%= @material_certificate.certificate_number %></p>
          <p><strong><%= t('.batch_number') %>:</strong> <%= @material_certificate.batch_number %></p>
          <p><strong><%= t('.issue_date') %>:</strong> <%= l(@material_certificate.issue_date, format: :long) %></p>
          <p><strong><%= t('.issuer') %>:</strong> <%= @material_certificate.issuer_name %></p>
        </div>
        <div class="col-md-6">
          <% if @material_certificate.certificate_file.attached? %>
            <p><strong><%= t('.certificate_file') %>:</strong>
              <%= link_to t('.download_certificate'),
                  rails_blob_path(@material_certificate.certificate_file, disposition: "attachment"),
                  class: "btn btn-sm btn-primary" %>
            </p>
          <% end %>
        </div>
      </div>

      <% if @material_certificate.description.present? %>
        <div class="mt-3">
          <h4><%= t('.description') %></h4>
          <p><%= @material_certificate.description %></p>
        </div>
      <% end %>

      <div class="mt-4">
        <h4><%= t('.associated_items') %></h4>
        <% if @delivery_items.any? %>
          <div class="table-responsive">
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th><%= t('.table.tag_number') %></th>
                  <th><%= t('.table.batch_number') %></th>
                  <th><%= t('.table.delivery_order') %></th>
                  <th><%= t('.table.quantity') %></th>
                </tr>
              </thead>
              <tbody>
                <% @delivery_items.each do |item| %>
                  <tr>
                    <td><%= item.tag_number %></td>
                    <td><%= item.batch_number %></td>
                    <td><%= item.incoming_delivery.order_number %></td>
                    <td><%= item.quantity_received %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-muted"><%= t('.no_items') %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>