<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('material_certificates.index.title') %></h1>
    <%= link_to t('.new_certificate'),
        new_material_certificate_path,
        class: 'btn btn-primary' %>
  </div>

  <div class="card mb-4">
    <div class="card-body">
      <%= form_tag material_certificates_path, method: :get, class: 'form-inline' do %>
        <div class="input-group">
          <%= text_field_tag :search,
              params[:search],
              class: 'form-control',
              placeholder: t('common.labels.search_placeholder') %>
          <button class="btn btn-outline-secondary" type="submit">
            <i class="bi bi-search"></i>
          </button>
        </div>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.material_certificate.certificate_number') %></th>
          <th><%= t('activerecord.attributes.material_certificate.batch_number') %></th>
          <th><%= t('activerecord.attributes.material_certificate.issue_date') %></th>
          <th><%= t('activerecord.attributes.material_certificate.issuer_name') %></th>
          <th><%= t('activerecord.attributes.material_certificate.certificate') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @material_certificates.each do |certificate| %>
          <tr>
            <td><%= certificate.certificate_number %></td>
            <td><%= certificate.batch_number %></td>
            <td><%= l(certificate.issue_date, format: :long) %></td>
            <td><%= certificate.issuer_name %></td>
            <td>
              <% if certificate.certificate_file.attached? %>
                <%= link_to t('.download'),
                    rails_blob_path(certificate.certificate_file, disposition: "attachment"),
                    class: "btn btn-sm btn-outline-primary" %>
              <% else %>
                <span class="text-muted"><%= t('.no_certificate') %></span>
              <% end %>
            </td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to certificate,
                    class: 'btn btn-outline-primary',
                    title: t('common.buttons.view') do %>
                  <i class="bi bi-eye"></i>
                <% end %>
                <%= link_to edit_material_certificate_path(certificate),
                    class: 'btn btn-outline-primary',
                    title: t('common.buttons.edit') do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
                <%= link_to certificate,
                    method: :delete,
                    data: { confirm: t('.delete_confirm') },
                    class: 'btn btn-outline-danger',
                    title: t('common.buttons.delete') do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>