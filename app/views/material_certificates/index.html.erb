<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Material Certificates</h1>
    <% if params[:project_id] %>
      <%= link_to 'New Material Certificate', new_project_material_certificate_path(params[:project_id]), class: 'btn btn-success' %>
    <% else %>
      <%= link_to 'New Material Certificate', new_project_material_certificate_path(Project.first),
                  class: 'btn btn-success',
                  data: { turbo_confirm: 'Please select a project first' },
                  disabled: Project.none? %>
    <% end %>
  </div>

  <%= form_tag material_certificates_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Search by certificate or batch number...' %>
      <div class="input-group-append">
        <%= submit_tag 'Search', class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Project</th>
          <th>Certificate Number</th>
          <th>Batch Number</th>
          <th>Issue Date</th>
          <th>Issuer</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @material_certificates.each do |certificate| %>
          <tr>
            <td><%= certificate.project.name %></td>
            <td><%= certificate.certificate_number %></td>
            <td><%= certificate.batch_number %></td>
            <td><%= certificate.issue_date.strftime("%Y-%m-%d") %></td>
            <td><%= certificate.issuer_name %></td>
            <td class="text-end">
                <%= link_to 'View', certificate, class: 'btn btn-sm btn-info' %>
                <%= link_to 'Edit', edit_material_certificate_path(certificate), class: 'btn btn-sm btn-primary' %>
                <%= link_to 'Delete', certificate,
                    method: :delete,
                    class: 'btn btn-sm btn-danger',
                    data: { turbo_confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

