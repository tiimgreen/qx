<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
  </div>

  <%= form_tag material_certificates_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search],
                        class: 'form-control',
                        placeholder: t('.search_placeholder') %>
      <div class="input-group-append">
        <%= submit_tag t('.search_button'), class: 'btn btn-outline-secondary m-1' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.material_certificate.project') %></th>
          <th><%= t('activerecord.attributes.material_certificate.certificate_number') %></th>
          <th><%= t('activerecord.attributes.material_certificate.batch_number') %></th>
          <th><%= t('activerecord.attributes.material_certificate.issue_date') %></th>
          <th><%= t('activerecord.attributes.material_certificate.issuer_name') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @material_certificates.each do |certificate| %>
          <tr>
            <td><%= certificate.project.name %></td>
            <td><%= certificate.certificate_number %></td>
            <td><%= certificate.batch_number %></td>
            <td><%= certificate.issue_date.strftime("%Y-%m-%d") %></td>
            <td><%= certificate.issuer_name %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to certificate,
                           class: 'btn btn-outline-info m-1',
                           title: t('material_certificates.buttons.view'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_material_certificate_path(certificate),
                           class: 'btn btn-outline-primary m-1',
                           title: t('material_certificates.buttons.edit'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_to material_certificate_path(certificate),
                           method: :delete,
                           class: 'btn btn-outline-danger m-1',
                           title: t('material_certificates.buttons.delete'),
                           form: { style: 'display: inline' },
                           data: {
                             turbo_confirm: t('common.messages.confirm_delete',
                                            model: MaterialCertificate.model_name.human.downcase),
                             bs_toggle: 'tooltip'
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>