<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0"><%= t('progress_tracking.title') %></h5>
    <% if user_signed_in? %>
    <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newProgressPlanModal">
      <i class="bi bi-plus"></i> <%= t('progress_tracking.new_plan') %>
    </button>
    <% end %>
  </div>

  <div class="card-body">
    <% if @progress_plans.any? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th><%= t('activerecord.models.project') %></th>
              <th><%= t('progress_tracking.work_type') %></th>
              <th><%= t('progress_tracking.start_date') %></th>
              <th><%= t('progress_tracking.end_date') %></th>
              <th><%= t('progress_tracking.weeks') %></th>
              <th><%= t('progress_tracking.revision_number') %></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @progress_plans.each do |plan| %>
              <tr>
                <td><%= plan.project.name %></td>
                <td><%= t("progress_tracking.work_types.#{plan.work_type}") %></td>
                <td><%= l plan.start_date.to_date %></td>
                <td><%= l plan.end_date.to_date %></td>
                <td><%= ((plan.end_date.to_date - plan.start_date.to_date).to_i / 7.0).ceil %></td>
                <td><%= revision_status_label(plan) %></td>
                <td class="text-end">
                  <%= link_to project_progress_tracking_path(@project, plan, locale: I18n.locale), class: 'btn btn-sm btn-primary me-1 mb-1' do %>
                    <i class="bi bi-graph-up"></i> <%= t('progress_tracking.view') %>
                  <% end %>
                  <% if plan.revision_last? %>
                    <%= button_to create_revision_project_progress_tracking_path(@project, plan, locale: I18n.locale), class: 'btn btn-sm btn-outline-primary me-2 mb-1', method: :post, data: { turbo_confirm: t('progress_tracking.confirm_revision') } do %>
                      <i class="bi bi-plus-circle"></i> <%= t('progress_tracking.create_revision') %>
                    <% end %>
                  <% end %>
                  <%= button_to toggle_lock_project_progress_tracking_path(@project, plan, locale: I18n.locale), class: "btn btn-sm #{plan.locked? ? 'btn-danger' : 'btn-outline-danger'} me-2", method: :post, data: { turbo_confirm: t("progress_tracking.confirm_#{plan.locked? ? 'unlock' : 'lock'}") } do %>
                    <i class="bi bi-#{plan.locked? ? 'unlock' : 'lock'}"></i> <%= t("progress_tracking.#{plan.locked? ? 'unlock' : 'lock'}") %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-4">
        <p class="text-muted"><%= t('progress_tracking.no_plans') %></p>
      </div>
    <% end %>
  </div>
</div>

<!-- New Progress Plan Modal -->
<div class="modal fade" id="newProgressPlanModal" tabindex="-1" aria-labelledby="newProgressPlanModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with(model: [@project, ProjectProgressPlan.new], url: project_progress_tracking_index_path(@project, locale: I18n.locale), local: true) do |f| %>
        <div class="modal-header">
          <h5 class="modal-title" id="newProgressPlanModalLabel"><%= t('progress_tracking.new_plan') %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :work_type, t('progress_tracking.work_type'), class: 'form-label' %>
            <%= f.select :work_type, ProjectProgressPlan.work_types.keys.map { |type| [t("progress_tracking.work_types.#{type}"), type] }, {}, class: 'form-select' %>
          </div>
          <div class="mb-3">
            <%= f.label :start_date, t('progress_tracking.start_date'), class: 'form-label' %>
            <%= f.date_field :start_date, class: 'form-control' %>
          </div>
          <div class="mb-3">
            <%= f.label :end_date, t('progress_tracking.end_date'), class: 'form-label' %>
            <%= f.date_field :end_date, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><%= t('common.cancel') %></button>
          <%= f.submit t('common.create'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
