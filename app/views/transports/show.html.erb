<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.transports.title'),
    path: project_transports_path(@project) },
  { text: @transport.work_package_number }
] %>

<div class="mt-4">
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-diagram-2"></i> <%= t('activerecord.models.isometry') %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.line_id') %></dt>
            <dd class="col-sm-6"><%=link_to @transport.isometry&.line_id, project_isometry_path(@project, @transport.isometry) %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.page_number') %></dt>
            <dd class="col-sm-6"><%= @transport.isometry.page_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.revision_number') %></dt>
            <dd class="col-sm-6"><%= revision_status_label(@transport.isometry) %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.total_spools') %></dt>
            <dd class="col-sm-6"><%= @transport.isometry.total_spools %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.pid_number') %></dt>
            <dd class="col-sm-6"><%= @transport.isometry.pid_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.material') %></dt>
            <dd class="col-sm-6"><%= @transport.isometry.material %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.system') %></dt>
            <dd class="col-sm-6"><%= @transport.isometry.system %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0"><%= t('.title', work_package: @transport.work_package_number) %></h2>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.transport.work_package_number') %></dt>
            <dd class="col-sm-6"><%= @transport.work_package_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.transport.user') %></dt>
            <dd class="col-sm-6"><%= @transport.user.name %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.transport.completed') %></dt>
            <dd class="col-sm-6"><%= @transport.completed.strftime("%d/%m/%Y %H:%M") if @transport.completed %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.transport.check_spools_status') %></dt>
            <dd class="col-sm-6"><%= @transport.check_spools_status %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.transport.check_spools_comment') %></dt>
            <dd class="col-sm-6"><%= @transport.check_spools_comment %></dd>

            <%= render partial: 'application/docuvita_documents', locals: {
              documents: @transport.check_spools_images,
              title: t('.check_spools_images')
            } %>
          </dl>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <%= link_to t('common.labels.back'), project_transports_path(@project), class: 'btn btn-primary' %>
        <%= link_to t('common.labels.back_isometry'), project_isometry_path(@project, @transport.isometry), class: 'btn btn-primary' %>

        <% if current_user.can_edit?("Transport") %>
          <%= link_to edit_project_transport_path(@project, @transport), class: 'btn btn-outline-primary' do %>
            <i class="bi bi-pencil"></i> <%= t('common.labels.edit') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
