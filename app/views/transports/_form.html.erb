<%= form_with(
      model: [@project, @transport],
      local: true,
      class: 'needs-validation',
      id: 'transport_form',
      data: { 
        turbo: true,
        controller: "validation spool-confirmation"
      }
    ) do |f| %>
  <% if @transport.errors.any? %>
    <div class="alert alert-danger">
      <h6><%= t('.errors.header', count: @transport.errors.count) %></h6>
      <ul>
        <% @transport.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :isometry_id, value: @isometry&.id %>

  <div class="row">
    <div class="col-md-4">

      <div class="mb-3">
        <%= f.label :work_package_number, class: 'form-label' %>
        <div class="input-group" 
             data-controller="work-package-search"
             data-work-package-search-url-value="<%= search_work_packages_project_isometries_path(@project, format: :json) %>"
             data-work-package-search-min-length-value="2">
          <%= f.text_field :work_package_number, 
                          class: 'form-control',
                          data: {
                            work_package_search_target: "input",
                            action: "input->work-package-search#search click@window->work-package-search#clickOutside"
                          } %>
          <div class="dropdown-menu w-100" data-work-package-search-target="results"></div>
        </div>
      </div>
        <div class="mb-3">
      <% if @transport.persisted? && @transport.completed? %>

          <%= f.label :completed, class: 'form-label' %>
          <%= f.text_field :completed, 
                          value: (@transport.completed ? @transport.completed.strftime("%d/%m/%Y %H:%M") : nil),
                          class: 'form-control', 
                          disabled: true %>
        <% end %>

        </div>
    </div>

    <div class="col-md-8">
      <%= render "isometry_details", isometry: @isometry %>
      
      <% if f.object.persisted? %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <%= f.label :check_spools_status, t('activerecord.attributes.transport.check_spools_status'), class: 'form-label' %>
                  <%= f.select :check_spools_status, Transport::CHECK_SPOOLS_STATUSES, { include_blank: false }, class: 'form-control' %>
                </div>
              </div>
              <div class="col-md-6">
                <%= f.label :check_spools_images, t('activerecord.attributes.transport.check_spools_images'), class: 'form-label' %>
                <%= f.file_field :check_spools_images, multiple: true, class: 'form-control', accept: 'image/jpeg,image/png,image/gif,image/bmp,image/tiff,application/pdf' %>
              </div>
            </div>
            
            <%= render partial: 'application/docuvita_documents', locals: { 
              documents: f.object.check_spools_images, 
              document_type: 'check_spools_image',
              edit_mode: true,
              model_type: f.object
            } %>

            <%= f.text_area :check_spools_comment, class: 'form-control mt-2', rows: 2,
                            placeholder: t('activerecord.attributes.transport.check_spools_comment') %>
          </div>
        </div>
      <% end %>

  </div>

  <div class="row mt-3">
    <div class="col-12">
      <div class="d-flex justify-content-between">
        <%= link_to t('common.labels.back'), project_transports_path(@project), class: 'btn btn-primary' %>

          <% if @transport.persisted? && @transport.completed.nil? && !@transport.failed? %>
           <div class="d-none" data-spool-confirmation-target="completeButton">
              <%= link_to complete_project_transport_path(@project, @transport),
                        class: 'btn btn-success',
                        data: { 
                          turbo_method: :patch,
                          turbo_confirm: t('common.messages.confirm_complete_warning')
                        } do %>
                <i class="bi bi-check-circle"></i> <%= t('common.actions.complete') %>
              <% end %>
            </div>
          <% end %>
        <%= f.submit t("common.actions.save"), 
                    class: "btn btn-primary", 
                    data: { 
                      spool_confirmation_target: "submitButton",
                      disable_with: t('common.actions.saving')
                    },
                    disabled: !@transport.persisted? && action_name == 'edit' %> 
      </div>
    </div>
  </div>
<% end %>