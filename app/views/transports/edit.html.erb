<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.transports'),
    path: project_transports_path(@project) },
  { text: @transport.work_package_number,
    path: project_transport_path(@project, @transport) },
  { text: t('common.labels.edit') }
] %>

<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2 class="mb-0"><%= t('.title', work_package: @transport.work_package_number) %></h2>
    </div>

    <div class="card-body">
      <%= render 'form' %>
    </div>
  </div>
</div>
