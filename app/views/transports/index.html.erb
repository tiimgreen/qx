<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.transports'),
    path: project_transports_path(@project) }
] %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title_for_project', project: @project.name) %></h1>
  </div>

  <div class="row mb-4">
    <div class="col-md-8">
      <%= form_tag project_transports_path(@project), method: :get do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search],
                            class: 'form-control',
                            placeholder: t('common.labels.search_placeholder') %>
          <div class="input-group-append">
            <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-4 text-end">
      <%= link_to new_project_transport_path(@project), class: 'btn btn-primary' do %>
        <i class="bi bi-plus"></i> <%= t('common.buttons.new') %>
      <% end %>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>
            <%= link_to t('activerecord.attributes.transport.work_package_number'),
                request.params.merge(sort: 'work_package_number', direction: (params[:sort] == 'work_package_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('work_package_number') if params[:sort] == 'work_package_number' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.transport.check_spools_status'),
                request.params.merge(sort: 'check_spools_status', direction: (params[:sort] == 'check_spools_status' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('check_spools_status') if params[:sort] == 'check_spools_status' %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.transport.completed'),
                request.params.merge(sort: 'completed', direction: (params[:sort] == 'completed' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('completed') if params[:sort] == 'completed' %>
          </th>
          <th><%= t('common.labels.created_by') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @transports.each do |transport| %>
          <tr>
            <td><%= transport.work_package_number %></td>
            <td><%= status_label(transport.check_spools_status) %></td>
            <td><%= l(transport.completed, format: :short) if transport.completed %></td>
            <td><%= transport.user.name %></td>
            <td class="text-end">
              <% if current_user.can_view?("Transport") %>
                <%= link_to project_transport_path(@project, transport), class: 'btn btn-sm btn-outline-primary' do %>
                  <i class="bi bi-eye"></i>
                <% end %>
              <% end %>
              <% if current_user.can_edit?("Transport") %>
                <%= link_to edit_project_transport_path(@project, transport), class: 'btn btn-sm btn-outline-secondary' do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              <% end %>
              <% if current_user.can_delete?("Transport") %>
                  <%= button_tag type: 'button',
                             class: 'btn btn-outline-danger m-1',
                             title: t('common.buttons.delete'),
                             data: {
                               bs_toggle: "modal",
                               bs_target: "#deleteTransportModal",
                               "project-id": transport.project.id,
                               "transport-id": transport.id,
                               "transport-name": transport.work_package_number,
                               "transport-number": transport.work_package_number
                             } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'delete_confirmation_modal', 
           locals: {
             modal_id: 'deleteTransportModal',
             controller_name: 'delete-transport',
             model_name: 'transport'
           } %>