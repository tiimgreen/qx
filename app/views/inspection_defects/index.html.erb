<!-- app/views/inspection_defects/index.html.erb -->
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
    <% if @quality_inspection %>
      <%= link_to new_quality_inspection_inspection_defect_path(@quality_inspection),
                  class: 'btn btn-success' do %>
        <i class="bi bi-plus"></i> <%= t('.record_new') %>
      <% end %>
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.inspection_defect.inspection_reference') %></th>
          <th><%= t('activerecord.attributes.inspection_defect.severity') %></th>
          <th><%= t('activerecord.attributes.inspection_defect.description') %></th>
          <th><%= t('activerecord.attributes.inspection_defect.corrective_action') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @inspection_defects.each do |defect| %>
          <tr class="<%= severity_class(defect.severity) %>">
            <td><%= defect.quality_inspection.reference_number %></td>
            <td>
              <span class="badge <%= severity_badge_class(defect.severity) %>">
                <%= t("inspection_defects.severity.#{defect.severity}") %>
              </span>
            </td>
            <td><%= truncate(defect.description, length: 50) %></td>
            <td><%= truncate(defect.corrective_action, length: 50) if defect.corrective_action %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to defect,
                           class: 'btn btn-outline-info',
                           title: t('inspection_defects.buttons.view'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_inspection_defect_path(defect),
                           class: 'btn btn-outline-primary',
                           title: t('inspection_defects.buttons.edit'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_to inspection_defect_path(defect),
                           method: :delete,
                           class: 'btn btn-outline-danger',
                           title: t('inspection_defects.buttons.delete'),
                           form: { style: 'display: inline' },
                           data: {
                             turbo_confirm: t('common.messages.confirm_delete',
                                            model: InspectionDefect.model_name.human.downcase),
                             bs_toggle: 'tooltip'
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


  <% if @inspection_defect.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@inspection_defect.errors.count, "error") %> prohibited this defect from being saved:</h4>
      <ul>
        <% @inspection_defect.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

