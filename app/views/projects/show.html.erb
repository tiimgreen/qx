<%# app/views/projects/show.html.erb %>
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Project Details</h5>
    <div>
      <%= link_to 'Edit', edit_project_path(@project), class: 'btn btn-primary btn-sm'%>
      <%= link_to 'Back', projects_path, class: 'btn btn-secondary btn-sm' %>
    </div>
  </div>

  <div class="card-body">
    <dl class="row">
      <dt class="col-sm-3">Project Number</dt>
      <dd class="col-sm-9"><%= @project.project_number %></dd>

      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9"><%= @project.name %></dd>

      <dt class="col-sm-3">Description</dt>
      <dd class="col-sm-9"><%= @project.description %></dd>

      <dt class="col-sm-3">Created</dt>
      <dd class="col-sm-9"><%= @project.created_at.strftime("%Y-%m-%d %H:%M") %></dd>
    </dl>
  </div>
</div>