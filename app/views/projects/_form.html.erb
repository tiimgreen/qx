<div class="card">
  <div class="card-header">
    <h5 class="mb-0"><%= t("projects.form.title.#{@project.new_record? ? 'new' : 'edit'}") %></h5>
  </div>

  <div class="card-body">
    <%= form_with(model: @project, local: true, class: 'needs-validation') do |form| %>
    <div class="row">
      <div class="col-12 col-md-4">
        
      <% if @project.errors.any? %>
        <div class="alert alert-danger">
          <h6 class="alert-heading">
            <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:
          </h6>
          <ul class="mb-0">
            <% @project.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :project_number, class: 'form-label' %>
        <%= form.text_field :project_number, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :client_name, class: 'form-label' %>
        <%= form.text_field :client_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :project_manager_client, class: 'form-label' %>
        <%= form.text_field :project_manager_client, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :project_manager_qualinox, class: 'form-label' %>
        <%= form.text_field :project_manager_qualinox, class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= form.label :project_end, class: 'form-label' %>
        <div class="input-group">
          <%= form.date_field :project_end, class: 'form-control', required: true, value: Date.current %>
          <button type="button" class="btn btn-primary" onclick="document.getElementById('project_project_end').value = new Date().toISOString().split('T')[0]">
            Today
          </button>
        </div>
      </div>
      </div>

      <div class="col-12 col-md-8">
      <div class="form-group" data-controller="project-type">
        <div class="form-check my-5">
          <%= form.check_box :workshop, class: 'form-check-input', data: { action: "change->project-type#toggleSectors" } %>
          <%= form.label :workshop, class: 'form-check-label' %>
        </div>

        <%# Workshop Project Type Sectors Selection %>
        <div class="form-group" data-project-type-target="sectorSelect" style="display: none;">
          <%= form.label :sector_ids, "Select Sectors", class: 'form-label' %>
          <select name="project[sector_ids][]" multiple class="form-select" 
                  data-project-type-target="sectors"
                  data-action="change->project-type#sectorChange"
                  style="height: auto; min-height: 200px;" 
                  size="10">
            <% Sector.clean_sectors.each do |sector| %>
              <option value="<%= sector.id %>" 
                      data-sector-key="<%= sector.key %>"
                      data-is-project-sector="<%= sector.key == 'project' %>"
                      <%= 'selected' if @project.sectors.include?(sector) %>>
                <%= t("sectors.#{sector.key}") %>
              </option>
            <% end %>
          </select>
          <small class="form-text text-muted">Hold Ctrl/Cmd to select multiple sectors</small>
        </div>

        <%# Progress Tracking Configuration - Common for both types %>
        <div class="mt-4" data-project-type-target="filterConfig">
          <div class="row">
            <%# SOLL-IST Report Configuration %>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h6 class="mb-3">SOLL-IST Report Configuration</h6>
                  
                  <%# First Filter (Isometry is default and fixed) %>
                  <div class="mb-3">
                    <%= form.label :sollist_filter1_sector_id, "First Filter (Isometry)", class: 'form-label' %>
                    <%= form.collection_select :sollist_filter1_sector_id,
                        Sector.all,
                        :id,
                        ->(sector) { t("sectors.#{sector.key}") },
                        { selected: @project.sollist_filter1_sector_id || Sector.find_by(key: :isometry)&.id },
                        { class: 'form-select',
                          readonly: true,
                          style: 'background-color: #e9ecef;' }
                    %>
                  </div>

                  <%# Second Filter %>
                  <div class="mb-3">
                    <%= form.label :sollist_filter2_sector_id, "Second Filter", class: 'form-label' %>
                    <%= form.collection_select :sollist_filter2_sector_id,
                        Sector.all,
                        :id,
                        ->(sector) { t("sectors.#{sector.key}") },
                        { include_blank: 'Select Second Filter' },
                        { class: 'form-select', 
                          data: { 
                            'project-type-target': 'sollistFilter2',
                            'selected-value': @project.sollist_filter2_sector_id
                          }
                        }
                    %>
                  </div>

                  <%# Third Filter %>
                  <div class="mb-3">
                    <%= form.label :sollist_filter3_sector_id, "Third Filter", class: 'form-label' %>
                    <%= form.collection_select :sollist_filter3_sector_id,
                        Sector.all,
                        :id,
                        ->(sector) { t("sectors.#{sector.key}") },
                        { include_blank: 'Select Third Filter' },
                        { class: 'form-select', 
                          data: { 
                            'project-type-target': 'sollistFilter3',
                            'selected-value': @project.sollist_filter3_sector_id
                          }
                        }
                    %>
                  </div>
                </div>
              </div>
            </div>

            <%# Current Progress Configuration %>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h6 class="mb-3">Current Progress Configuration</h6>
                  
                  <%# First Filter %>
                  <div class="mb-3">
                    <%= form.label :progress_filter1_sector_id, "First Filter", class: 'form-label' %>
                    <%= form.collection_select :progress_filter1_sector_id,
                        Sector.all,
                        :id,
                        ->(sector) { t("sectors.#{sector.key}") },
                        { include_blank: 'Select First Filter' },
                        { class: 'form-select', 
                          data: { 
                            'project-type-target': 'progressFilter1',
                            'selected-value': @project.progress_filter1_sector_id
                          }
                        }
                    %>
                  </div>

                  <%# Second Filter %>
                  <div class="mb-3">
                    <%= form.label :progress_filter2_sector_id, "Second Filter", class: 'form-label' %>
                    <%= form.collection_select :progress_filter2_sector_id,
                        Sector.all,
                        :id,
                        ->(sector) { t("sectors.#{sector.key}") },
                        { include_blank: 'Select Second Filter' },
                        { class: 'form-select', 
                          data: { 
                            'project-type-target': 'progressFilter2',
                            'selected-value': @project.progress_filter2_sector_id
                          }
                        }
                    %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="form-actions m-3 d-flex justify-content-end">
        <%= form.submit t('helpers.submit.submit'), class: 'btn btn-primary me-2' %>
        <%= link_to t('helpers.links.cancel'), :back, class: 'btn btn-secondary' %>
      </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
