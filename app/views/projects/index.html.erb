<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
  </div>

  <%= form_tag projects_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search],
                        class: 'form-control',
                        placeholder: t('common.labels.search_placeholder') %>
      <div class="input-group-append">
        <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>
            <%= link_to t('activerecord.attributes.project.project_number'),
                request.params.merge(sort: 'project_number', direction: (params[:sort] == 'project_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.name'),
                request.params.merge(sort: 'name', direction: (params[:sort] == 'name' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('name') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.description'),
                request.params.merge(sort: 'description', direction: (params[:sort] == 'description' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('description') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.project_manager'),
                request.params.merge(sort: 'project_manager', direction: (params[:sort] == 'project_manager' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_manager') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.client_name'),
                request.params.merge(sort: 'client_name', direction: (params[:sort] == 'client_name' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('client_name') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.created_at'),
                request.params.merge(sort: 'created_at', direction: (params[:sort] == 'created_at' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('created_at') %>
          </th>
          <th><%= t('activerecord.attributes.project.created_by') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.project_number %></td>
            <td><%= link_to project.name, project %></td>
            <td><%= project.description %></td>
            <td><%= project.project_manager %></td>
            <td><%= project.client_name %></td>
            <td><%= project.created_at.strftime("%Y-%m-%d") %></td>
            <td><%= project.user&.name %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to project,
                           class: 'btn btn-outline-info m-1',
                           title: t('projects.buttons.view'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_project_path(project),
                           class: 'btn btn-outline-primary m-1',
                           title: t('projects.buttons.edit'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_tag type: 'button',
                           class: 'btn btn-outline-danger m-1',
                           title: t('projects.buttons.delete'),
                           data: {
                             bs_toggle: "modal",
                             bs_target: "#deleteProjectModal",
                             "project-id": project.id,
                             "project-name": project.name,
                             "project-number": project.project_number
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" 
     id="deleteProjectModal" 
     tabindex="-1" 
     data-controller="delete-project"
     data-delete-project-message-value="<%= t('common.messages.confirm_delete_with_details', model: t('activerecord.models.project'), name: '%{name}', number: '%{number}') %>"
     aria-labelledby="deleteProjectModalLabel" 
     aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title" id="deleteProjectModalLabel">
          <i class="bi bi-exclamation-triangle-fill me-2"></i>
          <%= t('common.messages.confirm_delete_title') %>
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p data-delete-project-target="message"></p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          <i class="bi bi-x-circle me-2"></i><%= t('common.buttons.cancel') %>
        </button>
        <button type="button" 
                class="btn btn-danger"
                data-action="delete-project#deleteProject">
          <i class="bi bi-trash me-2"></i><%= t('common.buttons.delete') %>
        </button>
      </div>
    </div>
  </div>
</div>

<%= render 'pagy' %>
