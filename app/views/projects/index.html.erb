<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1><%= t('.title') %></h1>
  </div>

  <%= form_tag projects_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search],
                        class: 'form-control',
                        placeholder: t('common.labels.search_placeholder') %>
      <div class="input-group-append">
        <%= submit_tag t('common.labels.search_button'), class: 'btn btn-outline-secondary m-1' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th><%= t('activerecord.attributes.project.project_number') %></th>
          <th><%= t('activerecord.attributes.project.name') %></th>
          <th><%= t('activerecord.attributes.project.description') %></th>
          <th><%= t('activerecord.attributes.project.project_manager') %></th>
          <th><%= t('activerecord.attributes.project.client_name') %></th>
          <th><%= t('activerecord.attributes.project.created_at') %></th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.project_number %></td>
            <td><%= link_to project.name, project %></td>
            <td><%= project.description %></td>
            <td><%= project.project_manager %></td>
            <td><%= project.client_name %></td>
            <td><%= project.created_at.strftime("%Y-%m-%d") %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <%= link_to project,
                           class: 'btn btn-outline-info m-1',
                           title: t('projects.buttons.view'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-eye"></i>
                <% end %>

                <%= link_to edit_project_path(project),
                           class: 'btn btn-outline-primary m-1',
                           title: t('projects.buttons.edit'),
                           data: { bs_toggle: 'tooltip' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>

                <%= button_to project_path(project),
                           method: :delete,
                           class: 'btn btn-outline-danger m-1',
                           title: t('projects.buttons.delete'),
                           form: { style: 'display: inline' },
                           data: {
                             turbo_confirm: t('common.messages.confirm_delete',
                                            model: Project.model_name.human.downcase),
                             bs_toggle: 'tooltip'
                           } do %>
                  <i class="bi bi-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'pagy' %>
