<div class="mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-white"><%= t('.title') %></h1>
  </div>

  <%= form_tag projects_path, method: :get, class: 'mb-4' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search],
                        class: 'form-control',
                        placeholder: t('common.labels.search_placeholder') %>
      <div class="input-group-append">
        <%= submit_tag t('common.labels.search_button'), class: 'btn btn-primary m-1' %>
      </div>
    </div>
  <% end %>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>
            <%= link_to t('activerecord.attributes.project.project_number'),
                request.params.merge(sort: 'project_number', direction: (params[:sort] == 'project_number' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_number') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.client_name'),
                request.params.merge(sort: 'client_name', direction: (params[:sort] == 'client_name' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('client_name') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.name'),
                request.params.merge(sort: 'name', direction: (params[:sort] == 'name' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('name') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.project_manager_client'),
                request.params.merge(sort: 'project_manager_client', direction: (params[:sort] == 'project_manager_client' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_manager_client') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.project_manager_qualinox'),
                request.params.merge(sort: 'project_manager_qualinox', direction: (params[:sort] == 'project_manager_qualinox' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_manager_qualinox') %>
          </th>
          <th>
            <%= link_to t('activerecord.attributes.project.project_end'),
                request.params.merge(sort: 'project_end', direction: (params[:sort] == 'project_end' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('project_end') %>
          </th>
          <th><%= t('activerecord.attributes.project.created_by') %></th>
          <th>
            <%= link_to t('activerecord.attributes.project.created_at'),
                request.params.merge(sort: 'created_at', direction: (params[:sort] == 'created_at' && params[:direction] == 'asc') ? 'desc' : 'asc') %>
            <%= sort_indicator('created_at') %>
          </th>
          <th class="text-end"><%= t('common.labels.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.project_number %></td>
            <td><%= project.client_name %></td>
            <td><%= link_to project.name, project %></td>
            <td><%= project.project_manager_client %></td>
            <td><%= project.project_manager_qualinox %></td>
            <td><%= project.project_end.strftime("%Y-%m-%d") if project.project_end %></td>
            <td><%= project.user&.name %></td>
            <td><%= project.created_at.strftime("%Y-%m-%d") %></td>
            <td class="text-end">
              <div class="btn-group btn-group-sm">
                <% if current_user.can_view?("Project") %>
                  <%= link_to project,
                             class: 'btn btn-outline-info m-1',
                             title: t('projects.buttons.view'),
                             data: { bs_toggle: 'tooltip' } do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                <% end %>

                <% if current_user.can_edit?("Project") %>
                  <%= link_to edit_project_path(project),
                             class: 'btn btn-outline-primary m-1',
                             title: t('projects.buttons.edit'),
                             data: { bs_toggle: 'tooltip' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                <% end %>

                <% if current_user.can_delete?("Project") %>
                  <%= button_tag type: 'button',
                             class: 'btn btn-outline-danger m-1',
                             title: t('projects.buttons.delete'),
                             data: {
                               bs_toggle: "modal",
                               bs_target: "#deleteProjectModal",
                               "project-id": project.id,
                               "project-name": project.name,
                               "project-number": project.project_number
                             } do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'delete_confirmation_modal', 
           locals: {
             modal_id: 'deleteProjectModal',
             controller_name: 'delete-project',
             model_name: 'project'
           } %>

<%= render 'pagy' %>
