<%= render 'application/breadcrumb', breadcrumbs: [
  { text: @project.name, path: project_path(@project) },
  { text: t('navigation.menu.site_deliveries'),
    path: project_site_deliveries_path(@project) },
  { text: @site_delivery.work_package_number }
] %>

<div class="container mt-4">
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0"><i class="bi bi-diagram-2"></i> <%= t('activerecord.models.isometry') %></h5>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.line_id') %></dt>
            <dd class="col-sm-6"><%=link_to @site_delivery.isometry&.line_id, project_isometry_path(@project, @site_delivery.isometry) %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.page_number') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.isometry.page_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.revision_number') %></dt>
            <dd class="col-sm-6"><%= revision_status_label(@site_delivery.isometry) %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.total_spools') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.isometry.total_spools %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.pid_number') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.isometry.pid_number %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.material') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.isometry.material %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.isometry.system') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.isometry.system %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0"><%= t('.title', work_package: @site_delivery.work_package_number) %></h2>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.site_delivery.work_package_number') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.work_package_number %></dd>

            <dt class="col-sm-6"><%= t('common.labels.created_by') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.user.name %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.site_delivery.completed') %></dt>
            <dd class="col-sm-6"><%= l(@site_delivery.completed, format: :long) if @site_delivery.completed %></dd>
          </dl>
        </div>

        <div class="col-md-6">
          <dl class="row">
            <dt class="col-sm-6"><%= t('activerecord.attributes.site_delivery.check_spools_status') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.check_spools_status %></dd>

            <dt class="col-sm-6"><%= t('activerecord.attributes.site_delivery.check_spools_comment') %></dt>
            <dd class="col-sm-6"><%= @site_delivery.check_spools_comment %></dd>

            <% if @site_delivery.check_spools_images.attached? %>
              <div class="row row-cols-1 row-cols-md-3 g-3">
                <% @site_delivery.check_spools_images.each do |image| %>
                  <div class="col">
                    <div class="card h-100">
                      <%= link_to image_tag(image.variant(:thumb), 
                                          class: "card-img-top", 
                                          style: "object-fit: cover; height: 100px;",
                                          data: { 
                                            bs_toggle: "modal",
                                            bs_target: "#imageModal#{image.id}"
                                          }),
                                "#" %>

                      <!-- Modal for this image -->
                      <div class="modal fade" id="imageModal<%= image.id %>" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title"><%= t('common.labels.image_preview') %></h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body text-center">
                              <%= image_tag image.variant(:medium), class: "img-fluid" %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>

          </dl>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <div class="d-flex justify-content-between">
        <%= link_to t('common.labels.back'), project_site_deliveries_path(@project), class: 'btn btn-primary' %>
        <%= link_to t('common.labels.back_isometry'), project_isometry_path(@project, @site_delivery.isometry), class: 'btn btn-primary' %>

        <% if current_user.can_edit?("SiteDelivery") %>
          <%= link_to edit_project_site_delivery_path(@project, @site_delivery), class: 'btn btn-outline-primary' do %>
            <i class="bi bi-pencil"></i> <%= t('common.labels.edit') %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
